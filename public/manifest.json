{
  "manifest_version": 3,
  "name": "Leetcode Coach",
  "version": "1.0",
  "description": "A helpful coach for Leetcode problem solving",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://leetcode.com/*"],
      "js": ["../src/content.js"],
      "css": ["../src/content.css"]
    }
  ]
} 